<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    app:contentPaddingTop="2dp"
    app:contentPaddingBottom="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/city_item_user_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user_pic"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/city_item_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textColor="#0066cc"
                android:text="Fushicho" />
            <TextView
                android:id="@+id/city_item_user_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:textSize="15sp"
                android:textColor="#000000"
                android:padding="5dp"
                android:text="加班加班加班加班加班加班ing" />
            <ImageView
                android:id="@+id/city_item_pic"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="11dp"
                android:src="@drawable/input_pic" />
            <TextView
                android:id="@+id/city_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="12dp"
                android:textSize="10sp"
                android:text="2019-01-28" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>